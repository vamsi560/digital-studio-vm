{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "backend/api/generate-code.js": {
      "maxDuration": 60
    },
    "backend/api/projects.js": {
      "maxDuration": 30
    },
    "backend/api/health.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/backend/api/health.js"
    },
    {
      "source": "/api/generate-code",
      "destination": "/backend/api/generate-code.js"
    },
    {
      "source": "/api/projects",
      "destination": "/backend/api/projects.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
